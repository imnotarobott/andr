<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="50dp"
    android:paddingBottom="16dp"
    android:background="@mipmap/math_bg"
    tools:context="com.example.david.mathgamev_1.GameActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:clickable="true"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:onClick="onClick"
        android:text="1"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:textSize="35dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:text="4" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="2"
        android:layout_alignTop="@+id/button1"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="3"
        android:layout_alignTop="@+id/Button02"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="5"
        android:layout_above="@+id/Button07"
        android:layout_alignLeft="@+id/Button07"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignStart="@+id/Button07" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="6"
        android:layout_below="@+id/Button03"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Button06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="7"
        android:layout_below="@+id/Button01"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Button07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="8"
        android:layout_above="@+id/Button11"
        android:layout_alignLeft="@+id/Button09"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignStart="@+id/Button09" />

    <Button
        android:id="@+id/Button08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="9"
        android:layout_below="@+id/Button05"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Button09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="0"
        android:layout_below="@+id/Button07"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textSize="35dp"
        android:text="c"
        android:layout_below="@+id/Button08"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="90dp"
        android:minWidth="110dp"
        android:onClick="onClick"
        android:textSize="25dp"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:text="Vissza"
        android:layout_below="@+id/Button06"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button02"
        android:layout_alignLeft="@+id/button1"
        android:textColor="@color/Light_grey"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/button1"
        android:textColor="@color/Grey"
        android:text="Idő" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button02"
        android:layout_toRightOf="@+id/Button02"
        android:textColor="@color/Light_grey"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:textColor="@color/Grey"
        android:text="Példák" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/Button03"
        android:background="@color/Dark_grey"
        android:text="TextView"
        android:textColor="#00EE00"
        android:textSize="40dp" />

</RelativeLayout>
